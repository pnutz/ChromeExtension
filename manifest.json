{
  "manifest_version": 2,

  "name": "TwoReceipt",
  "description": "This extension demonstrates a 'browser action' with NIGGAS.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js":	["jquery-2.0.3.min.js", "content.js"],
			"all_frames": true
		}
	],
	"background": {
		"scripts": ["jquery-2.0.3.min.js", "html-sanitizer-minified.js", "eventPage.js"],
		"persistent": false
	},
	"web_accessible_resources": [
		"/notification/*",
		"css/bootstrap.min.css",
		"jquery-2.0.3.min.js"
	],
  "permissions": [
    "tabs",
		"background",
    "http://localhost:3000/api/v1/tokens.json"
  ]
}